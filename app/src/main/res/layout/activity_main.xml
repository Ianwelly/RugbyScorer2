<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    >

    <RelativeLayout
        tools:context="com.example.android.rugbyscorer.MainActivity"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/rugby_8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:text="@string/team_a"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/_0"
                    android:textColor="@color/team_a_score_text_color"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/try_team_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="@color/team_a_try_button_bground_color"
                    android:onClick="scoreATryForTeamA"
                    android:text="@string/Try"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/conversion_team_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="@color/team_a_conversion_button_bground_color"
                    android:onClick="scoreAConversionForTeamA"
                    android:text="@string/conversion"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/penalty_team_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="@color/team_a_penalty_button_bground_color"
                    android:onClick="scoreAPenaltyForTeamA"
                    android:text="@string/penalty_kick"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/dropkick_team_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="@color/team_a_dropkick_bground_color"
                    android:onClick="scoreADropGoalForTeamA"
                    android:text="@string/drop_kick"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"> </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="16dp"
                    android:text="@string/team_b"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="16dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/_0_team_b"
                    android:textColor="@color/team_b_score_text_color"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/try_team_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="#80B2DFDB"
                    android:onClick="scoreATryForTeamB"
                    android:text="@string/try_team_b"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/conversion_team_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="#8080CBC4"
                    android:onClick="scoreAConversionTeamB"
                    android:text="@string/conversion_team_b"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/penalty_team_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="#804DB6AC"
                    android:onClick="scoreAPenaltyForTeamB"
                    android:text="@string/penalty_kick_team_b"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/dropkick_team_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:background="#8026A69A"
                    android:onClick="scoreADropGoalForTeamB"
                    android:text="@string/drop_kick_team_b"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@color/reset_button_bground_color"
            android:onClick="resetScores"
            android:text="@string/reset" />
    
    </RelativeLayout>

    </ScrollView>